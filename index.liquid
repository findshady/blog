---
layout: base
title: Home
---

<h1>Latest posts</h1>

{% for post in collections.posts %}
  <div class="post-card">
    {% if post.data.cover %}
      <img class="post-thumb" src="{{ post.data.cover }}" alt="cover">
    {% endif %}
    <div class="post-body">
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <div class="meta">
        {{ post.date | date: "%B %e, %Y" }}
      </div>
      {% if post.data.tags %}
        <div class="tags">
          {% for tag in post.data.tags %}
            <span class="tag">#{{ tag }}</span>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
{% endfor %}
